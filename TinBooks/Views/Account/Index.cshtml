@model Account

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<link rel="stylesheet" href="~/css/Account.css"> <!-- Link to the external CSS file -->

<body>
<div class="login-container">
    <h1>Login</h1>
    <form asp-route-returnurl="@ViewBag.ReturnUrl">
        <table>
            <tr>
                <td>Username</td>
                <td><input asp-for="Username" type="text" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input asp-for="Password" type="password" /></td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="Login" /></td>
            </tr>
        </table>
    </form>
</div>
</body>
</html>