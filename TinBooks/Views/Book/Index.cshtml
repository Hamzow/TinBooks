@model IEnumerable<TinBooks.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" type="text/css" href="~/css/index.css" /> <!-- Länk till din externa CSS -->

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Id)
        </th>
      
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any()) // Kontrollera om modellen inte är null och har element
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
               
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "action-link" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "action-link" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "action-link" })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="3">No authors found.</td> // Meddelande om att inga författare finns
        </tr>
    }
    </tbody>
</table>