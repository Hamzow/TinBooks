@model List<Book>
<!DOCTYPE html>
<html lang="sv">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TinBooks</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Ubuntu:wght@500&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="./css/Bibliotek.css">
</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
    <div class="container">
      <a class="navbar-brand" href="#">TinBooks</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="#features">Funktioner</a></li>
          <li class="nav-item"><a class="nav-link" href="#pricing">Prissättning</a></li>
          <li class="nav-item"><a class="nav-link" href="#testimonials">Omdömen</a></li>
          <li class="nav-item"><a class="nav-link" href="#contact">Kontakt</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="title" class="hero-section text-light">
    <div class="container text-center">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h1 class="display-4 fw-bold">Upptäck nya & inspirerande böcker nära dig</h1>
          <p class="lead">Din port till världen av böcker, författare och kunskap. Gå med oss och utforska din nästa favoritbok!</p>
          <a href="#pricing" class="btn btn-lg btn-outline-light mt-3">Kom igång</a>
        </div>
        <div class="col-lg-6">
          <img src="./images/boki.png" class="img-fluid" alt="Böcker" />
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="features-section py-5 text-center">
    <div class="container">
      <div class="row g-4">
        <div class="col-lg-4 col-md-6">
          <div class="feature-card p-4">
            <i class="fas fa-check-circle fa-3x text-primary mb-3"></i>
            <h3 class="fs-4">Användarvänlig</h3>
            <p>Så enkel att till och med ett barn kan använda den med lätthet.</p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="feature-card p-4">
            <i class="fas fa-book fa-3x text-success mb-3"></i>
            <h3 class="fs-4">Böcker av hög kvalitet</h3>
            <p>Vi tillhandahåller endast de bästa och mest fantastiska samlingarna av böcker.</p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="feature-card p-4">
            <i class="fas fa-headset fa-3x text-danger mb-3"></i>
            <h3 class="fs-4">Utmärkt support</h3>
            <p>Vi finns alltid här för att hjälpa dig när du behöver assistans.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="testimonials-section bg-light py-5">
    <div class="container">
      <h2 class="text-center mb-5">Vad våra användare säger</h2>
      <div id="testimonial-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="testimonial text-center">
              <p class="lead">"En av de bästa läsapparna jag någonsin använt!"</p>
              <p>– Dahir Dahir</p>
            </div>
          </div>
          <div class="carousel-item">
            <div class="testimonial text-center">
              <p class="lead">"TinBooks är otroligt användarvänlig och praktisk."</p>
              <p>– Nasir Abdoo</p>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#testimonial-carousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
          <span class="visually-hidden">Föregående</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#testimonial-carousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
          <span class="visually-hidden">Nästa</span>
        </button>
      </div>
    </div>
  </section>

   <!-- Press Section -->
   <section id="press" class="text-center py-5 bg-secondary text-white">
    <h2>Featured In</h2>
    
    <div class="d-flex justify-content-center">
        <img class="press-logo mx-3" src="images/ditord.jpg" alt="TechCrunch">
        <img class="press-logo mx-3" src="images/focus.jpeg" alt="TNW">
        <img class="press-logo mx-3" src="images/cover.jpg" alt="BizInsider">
        <img class="press-logo mx-3" src="images/barnn.png" alt="TechCrunch">
        <img class="press-logo mx-3" src="images/biwebb.png" alt="TNW">
        <img class="press-logo mx-3" src="images/barnn.png" alt="BizInsider">
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <button type="button" class="btn btn-light btn-lg px-4 me-md-2">
              <svg xmlns="" width="16" height="16" fill="currentColor" class="bi bi-apple mb-1" viewBox="0 0 16 16">
                <path d="M11.182.008C11.148-.03 9.923.023 8.857 1.18c-1.066 1.156-.902 2.482-.878 2.516.024.034 1.52.087 2.475-1.258.955-1.345.762-2.391.728-2.43Zm3.314 11.733c-.048-.096-2.325-1.234-2.113-3.422.212-2.189 1.675-2.789 1.698-2.854.023-.065-.597-.79-1.254-1.157a3.692 3.692 0 0 0-1.563-.434c-.108-.003-.483-.095-1.254.116-.508.139-1.653.589-1.968.607-.316.018-1.256-.522-2.267-.665-.647-.125-1.333.131-1.824.328-.49.196-1.422.754-2.074 2.237-.652 1.482-.311 3.83-.067 4.56.244.729.625 1.924 1.273 2.796.576.984 1.34 1.667 1.659 1.899.319.232 1.219.386 1.843.067.502-.308 1.408-.485 1.766-.472.357.013 1.061.154 1.782.539.571.197 1.111.115 1.652-.105.541-.221 1.324-1.059 2.238-2.758.347-.79.505-1.217.473-1.282Z" />
              </svg> Download
            </button>
          </div>
          
    </div>
</section>

  <!-- Pricing Section -->
  <section id="pricing" class="pricing-section py-5 text-center">
    <div class="container">
      <h2>Prissättningsplaner för varje läsare</h2>
      <p class="lead">Välj den plan som bäst passar dina läsbehov.</p>
      <div class="row g-4 mt-4">
        <div class="col-lg-4">
          <div class="pricing-card p-4 border rounded">
            <h3 class="fw-bold">Bas</h3>
            <p class="price">100kr/månad</p>
            <p>5 böcker/månad</p>
            <p>Standardkvalitet</p>
            <a asp-controller="Admin" asp-action="Index" class="menu-item">Välj plan</a>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="pricing-card p-4 border rounded">
            <h3 class="fw-bold">Pro</h3>
            <p class="price">200kr/månad</p>
            <p>50 böcker/månad</p>
            <p>Premiumkvalitet</p>
            <a asp-controller="Admin" asp-action="Index" class="menu-item">Välj plan</a>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="pricing-card p-4 border rounded">
            <h3 class="fw-bold">Enterprise</h3>
            <p class="price">300kr/månad</p>
            <p>Obegränsat antal böcker</p>
            <p>HD-kvalitet</p>

            <a asp-controller="Admin" asp-action="Index" class="menu-item">Välj plan</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="contact-section bg-dark text-light py-5">
    <div class="container">
      <h2 class="text-center">Kontakta oss</h2>
      <p class="text-center">Vi vill gärna höra från dig. Kontakta oss med frågor eller feedback.</p>
      <div class="row text-center mt-4">
        <div class="col-lg-4">
          <h4>Support</h4>
          <p>Email: support@tinbooks.com</p>
        </div>
        <div class="col-lg-4">
          <h4>Sociala medier</h4>
          <p>Facebook | Twitter | Instagram</p>
        </div>
        <div class="col-lg-4">
          <h4>Plats</h4>
          <p>Göteborg, Sverige</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
